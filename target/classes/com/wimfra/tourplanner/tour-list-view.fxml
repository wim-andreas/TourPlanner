<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="250.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wimfra.tourplanner.view.TourListController">
    <content>
        <VBox>
            <children>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tours">
                            <font>
                                <Font name="Calibri" size="18.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="addTourBtn" mnemonicParsing="false" text="âž•" />
                        <Button fx:id="deleteTourBtn" mnemonicParsing="false" text="âž–">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" fx:id="editTourBtn" text="ðŸ› ">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="Edit a tour" />
                            </tooltip>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <Separator prefWidth="200.0" />
                <TextField fx:id="tourListSearch" promptText="Search...">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <HBox>
                <Button fx:id="searchButton" mnemonicParsing="false" prefWidth="100" text="Search" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" />
                  </HBox.margin></Button>
                <Button fx:id="clearButton" mnemonicParsing="false" prefWidth="100" text="Clear">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" />
                  </HBox.margin></Button>
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                </HBox>

                <ListView fx:id="tourListView" onMouseClicked="#onMouseClickGetTour" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </content>
</ScrollPane>
