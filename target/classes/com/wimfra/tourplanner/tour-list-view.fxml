<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wimfra.tourplanner.TourPlannerController"
            fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="250.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
        <content>
            <VBox>
                <children>
                    <HBox alignment="CENTER_RIGHT">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tours">
                                <font>
                                    <Font name="Calibri" size="18.0" />
                                </font>
                            </Text>
                            <Region HBox.hgrow="ALWAYS" />
                            <Button mnemonicParsing="false" onAction="#AddTourOnButtonClick" text="➕"  />
                            <Button mnemonicParsing="false" onAction="#DeleteTourOnButtonClick" text="➖">
                                <HBox.margin>
                                    <Insets left="5.0" />
                                </HBox.margin>
                                <tooltip>
                                    <Tooltip text="Delete a tour" />
                                </tooltip>
                            </Button>
                            <Button mnemonicParsing="false" text="Edit">
                                <HBox.margin>
                                    <Insets left="5.0" />
                                </HBox.margin>
                                <tooltip>
                                    <Tooltip text="Edit a tour" />
                                </tooltip>
                            </Button>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </HBox>
                    <Separator prefWidth="200.0" />
                    <TextField promptText="Search...">
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                    </TextField>
                    <ListView fx:id="TourList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                </children>
            </VBox>
        </content>
    </ScrollPane>
