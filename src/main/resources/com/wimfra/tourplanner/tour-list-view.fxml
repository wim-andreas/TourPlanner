<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"  fx:controller="com.wimfra.tourplanner.view.TourListController" fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="250.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER" >
    <content>
        <VBox>
            <children>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tours">
                            <font>
                                <Font name="Calibri" size="18.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" text="➕" />
                        <Button mnemonicParsing="false"  text="➖">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="Delete a tour" />
                            </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" text="Edit">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                            <tooltip>
                                <Tooltip text="Edit a tour" />
                            </tooltip>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <Separator prefWidth="200.0" />
                <TextField  fx:id="tourListSearch" promptText="Search...">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <Button prefWidth="100" fx:id="searchButton" onAction="#searchAction" text="Search" alignment="CENTER"/>
                <ListView fx:id="tourListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </content>
</ScrollPane>
