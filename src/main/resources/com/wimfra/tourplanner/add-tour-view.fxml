<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="250.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wimfra.tourplanner.view.AddTourController">
    <children>
        <BorderPane prefHeight="500.0" prefWidth="350.0" AnchorPane.bottomAnchor="-2.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <VBox prefWidth="350.0" BorderPane.alignment="CENTER">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="nameTextField">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </TextField>
                        <Text layoutX="20.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="From">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="fromTextField" layoutX="20.0" layoutY="42.0">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </TextField>
                        <Text layoutX="20.0" layoutY="95.0" strokeType="OUTSIDE" strokeWidth="0.0" text="To">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="toTextField" layoutX="20.0" layoutY="98.0">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </TextField>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Transportation">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="transportationTextField">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </TextField>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Duration">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="durationTextField">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </TextField>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Distance">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="distanceTextField">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </TextField>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Info">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="infoTextField">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </TextField>
                        <Text layoutX="20.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Description">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Text>
                        <TextArea fx:id="descriptionTextArea" prefHeight="200.0" prefWidth="200.0" wrapText="true">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </TextArea>
                        <HBox alignment="TOP_RIGHT" prefWidth="200.0">
                            <children>
                                <Button mnemonicParsing="false" text="Cancel">
                                    <HBox.margin>
                                        <Insets right="15.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="addNewTourBtn" onAction="#addNewTour" layoutX="295.0" layoutY="10.0" mnemonicParsing="false" text="Add Tour" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
